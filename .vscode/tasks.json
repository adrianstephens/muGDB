{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "compile",
            "isBackground": false,
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "npm",
            "script": "watch",
            "group": "build",
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "package",
            "type": "shell",
            "command": "vsce package",
            "problemMatcher": []
        },
        {
            "label": "install",
            "type": "shell",
            "command": "code --install-extension ${workspaceFolder}/*.vsix",
            "problemMatcher": []
        }
    ]
}