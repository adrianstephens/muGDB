{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
		"module": "commonjs",
		"target": "es6",

		"noImplicitAny": false,
		"removeComments": false,
		"noImplicitThis": true,
		"inlineSourceMap": false,
		"sourceMap": true,
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"noUnusedParameters": false
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}
